{
  "include": [
    "pages/**/*",
    "components/**/*",
    "lib/**/*",
    "server/**/*",
    "shared/**/*",
    "types/**/*",
    "hooks/**/*"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "build",
    "dist",
    "**/*.test.ts"
  ],
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "lib": ["esnext", "dom", "dom.iterable"],
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["components/*"],
      "@lib/*": ["lib/*"],
      "@hooks/*": ["hooks/*"],
      "@shared/*": ["shared/*"]
    },
    "moduleResolution": "bundler",
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/typescript/tsbuildinfo",
    "allowImportingTsExtensions": true,
    "types": ["node"]
  }
}
