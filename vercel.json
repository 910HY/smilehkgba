{
  "version": 2,
  "buildCommand": "node build-vercel.js",
  "outputDirectory": "client/dist",
  "framework": "nextjs",
  "functions": {
    "pages/api/**/*.ts": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/pages/api/$1",
      "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"]
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/pages/index.tsx"
    }
  ],
  "github": {
    "enabled": true,
    "silent": false
  }
}